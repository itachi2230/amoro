<Window x:Class="Camara_Service.HistoriqueWindowst"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historique des achats"
        Width="600" Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="#AA1E1E1E" 
        BorderThickness="0"
        FontFamily="Segoe UI"
        FontSize="14">

    <Border CornerRadius="15" Background="#DD2C2C2C" Padding="10" BorderBrush="#44FFFFFF" BorderThickness="2" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titre -->
            <TextBlock x:Name="TitreProduit" 
                       Text="Historique - Produit"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,10"/>

            <!-- DataGrid Historique -->
            <DataGrid x:Name="HistoriqueDataGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Background="Transparent"
                      IsReadOnly="True"
                      Foreground="White"
                      BorderThickness="0"
                      RowBackground="#22FFFFFF"
                      AlternatingRowBackground="#11FFFFFF"
                      VerticalScrollBarVisibility="Auto"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None">

                <!-- Styles pour personnaliser header -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="#DDDDDD"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding DateAchat}" Width="*"/>
                    <DataGridTextColumn Header="Quantité" Binding="{Binding Quantite}" Width="*"/>
                    <DataGridTextColumn Header="Prix d'achat" Binding="{Binding PrixAchat}" Width="*"/>
                    <DataGridTextColumn Header="Produit" Binding="{Binding NomProduit}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

          

            <!-- Bouton Fermer -->
            <Button Grid.Row="3" 
                    Content="Fermer"
                    Width="100" Height="30"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Background="#FF444444"
                    Foreground="White"
                    BorderThickness="0"
                    Click="Fermer_Click"/>
        </Grid>
    </Border>
</Window>
