<UserControl x:Class="Camara_Service.VentesCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Height="198" Width="237">

    <UserControl.Resources>
        <!-- Hover Effect -->
        <Style x:Key="HoverBorderStyle" TargetType="Border">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF9800" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity" To="0.8" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity" To="0.3" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Contenu principal -->
    <Border Style="{StaticResource HoverBorderStyle}"
            CornerRadius="14" Margin="6"
            BorderBrush="#FF9800" BorderThickness="2"
            Background="#1B2A49" 
            >

        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header (Icon + Title) -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="CashMultiple" Foreground="#FF9800" Width="22" Height="27" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="#FF9800" FontSize="20" FontWeight="Bold" />
            </StackPanel>

            <!-- Circular Progress + Value -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Grid Width="100" Height="100">
                    <Ellipse Width="100" Height="100" Stroke="#FF9800" StrokeThickness="8"/>
                    <TextBlock Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="vente(s)" 
                               Foreground="Gray" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0"/>
                </Grid>
            </Grid>


            <!-- Dernière mise à jour -->
            <TextBlock Grid.Row="2" Text="{Binding LastUpdate, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Foreground="#FFB74D" FontSize="12" Margin="0,8,0,0" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
