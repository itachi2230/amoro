<Window x:Class="Camara_Service.ajouterProduit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un Produit"
        Height="621" Width="604"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D"
        WindowStyle="None"
        AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Background="#FF1B263B">
        <!-- Barre de titre personnalisée -->
        <Border Background="#00CFFF" Height="30" VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="Ajouter un Produit" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" Foreground="White" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <!-- Bouton Agrandir/Réduire -->
                    <Button x:Name="ToggleMaximizeButton" Content="🗖" Width="30" Height="30"
                            Background="Transparent" BorderBrush="Transparent" Foreground="White"
                            Click="ToggleMaximizeButton_Click" />
                    <!-- Bouton Fermer -->
                    <Button Content="✖" Width="30" Height="30"
                            Background="Transparent" BorderBrush="Transparent" Foreground="White"
                            Click="CloseButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Margin="0,30,0,0">
            <TextBlock Text="Ajouter un Nouveau Produit" FontSize="24" FontWeight="Bold" Foreground="#00CFFF"
                       HorizontalAlignment="Center" Margin="127,10,116.6,371" Width="350" TextAlignment="Center" />
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.9" Height="487"
                        Margin="59,94,59,10" Width="486">
                <!-- Champs de saisie -->
                <TextBlock Text="Nom du Produit" FontSize="16" Foreground="White" Margin="0,0,171.4,0" Height="23" HorizontalAlignment="Center" Width="291"/>
                <TextBox x:Name="NomTextBox" FontSize="16" Padding="8" BorderBrush="#00CFFF" BorderThickness="1" Background="#2C3E50" Foreground="White" Margin="12,0,27.4,0" Height="41" Width="447" HorizontalAlignment="Center"/>

                <TextBlock Text="Description" FontSize="16" Foreground="White" Margin="12,0,294.4,0" Height="23" HorizontalAlignment="Center" Width="180"/>
                <TextBox x:Name="DescriptionTextBox" FontSize="16" Padding="8" BorderBrush="#00CFFF" BorderThickness="1" Background="#2C3E50" Foreground="White" Margin="12,0,26.4,0" Height="41"/>

                <TextBlock Text="Magasin" FontSize="16" Foreground="White" Margin="12,0,200.4,0" Height="23" HorizontalAlignment="Center" Width="274"/>
                <ComboBox x:Name="TypeComboBox" FontSize="16" Text="0" BorderBrush="#00CFFF" Background="#FF939191" Foreground="Black" Margin="12,0,27.4,0" Height="27">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                    <ComboBoxItem Content="5" />
                    <ComboBoxItem Content="6" />
                    <ComboBoxItem Content="7" />
                    <ComboBoxItem Content="8" />
                    <ComboBoxItem Content="9" />
                    <ComboBoxItem Content="10" />
                </ComboBox>

                <TextBlock Text="Prix (FCFA)" FontSize="16" Foreground="White" Margin="12,0,232.4,0" Height="24" HorizontalAlignment="Center" Width="242"/>
                <TextBox x:Name="PrixTextBox" FontSize="16" Padding="8" BorderBrush="#00CFFF" BorderThickness="1" Background="#2C3E50" Foreground="White" Margin="12,0,26.4,0" Height="41"/>
                <TextBlock Text="Prix d'achat (FCFA)" FontSize="16" Foreground="White" Margin="12,0,232.4,0" Height="24" HorizontalAlignment="Center" Width="242"/>
                <TextBox x:Name="PrixTextBoxa" FontSize="14" Padding="8" BorderBrush="#00CFFF" BorderThickness="1" Background="#2C3E50" Foreground="White" Margin="12,0,26.4,0" Height="37"/>

                <TextBlock Text="Quantité" FontSize="16" Foreground="White" Margin="12,0,195.4,0" Height="23" HorizontalAlignment="Center" Width="279"/>
                <TextBox x:Name="QuantiteTextBox" FontSize="16" Padding="8" BorderBrush="#00CFFF" BorderThickness="1" Background="#2C3E50" Foreground="White" Margin="12,0,26.4,0" Height="41"/>

                <TextBlock Text="Date d'expiration" FontSize="16" Foreground="White" Margin="12,0,195.4,0" Height="23" HorizontalAlignment="Center" Width="279"/>
                <DatePicker x:Name="ExpirationDatePicker" FontSize="16" Margin="12,0,26.4,5" Height="35" Width="447" Background="#2C3E50" BorderBrush="#00CFFF"/>
                <Canvas Margin="0,3,0,0" Height="60">
                    <Button x:Name="AddProductButton" Content="Ajouter Produit" FontSize="16" Padding="8"
                            Background="#00CFFF" Foreground="White" BorderBrush="Transparent" Width="200" HorizontalAlignment="Center"
                            Click="AddProductButton_Click" Canvas.Left="132" />
                </Canvas>

                <TextBlock x:Name="SuccessMessageTextBlock" Text="Produit ajouté avec succès!" FontSize="16"
                           Foreground="LimeGreen" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
