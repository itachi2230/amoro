<Window x:Class="Camara_Service.StockWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚠ Stock critique détecté"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#111"
        Width="600" Height="400"
        AllowsTransparency="True"
        Opacity="0.95"
        >
    <Border CornerRadius="20" BorderBrush="#FF4500" BorderThickness="3" Padding="20" Background="#222" >
        <StackPanel>
            <TextBlock Text="⚠ Produits en rupture imminente ⚠" 
                       Foreground="#FF4500" FontSize="22" 
                       FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <ListView x:Name="ProduitsList" Background="#222" Foreground="White" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Produit" DisplayMemberBinding="{Binding Nom}" Width="200"/>
                        <GridViewColumn Header="Quantité" DisplayMemberBinding="{Binding Quantite}" Width="100"/>
                        <GridViewColumn Header="Magasin" DisplayMemberBinding="{Binding magasin}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="OK" Click="Fermer_Click"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Padding="10,5"
                    Background="#FF4500"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="100"/>
        </StackPanel>
    </Border>
</Window>
