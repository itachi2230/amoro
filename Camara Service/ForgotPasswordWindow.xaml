<Window x:Class="Camara_Service.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Réinitialiser mot de passe"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Code Admin :" Margin="0,0,0,5"/>
        <PasswordBox x:Name="AdminCodeBox" Width="200" Margin="0,0,0,10"/>

        <TextBlock Text="Utilisateur concerné :" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameBox" Width="200" Margin="0,0,0,10"/>

        <Button Content="Valider" Width="100" HorizontalAlignment="Center"
                Click="Validate_Click"/>
    </StackPanel>
</Window>
