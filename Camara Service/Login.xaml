<Window x:Class="Camara_Service.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AMORA LOGIN"
        Width="894.111"
        Height="546.274"
        KeyDown="Window_KeyDown"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="logo.png">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                    <DoubleAnimation Storyboard.TargetName="logoImage"
                                     Storyboard.TargetProperty="(Canvas.Top)"
                                     From="87" To="67"
                                     Duration="0:0:2"
                                     AutoReverse="True" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Canvas>
            <!-- Arrière-plan -->
            <Path Stroke="Gray" StrokeThickness="1" Height="459.794" Stretch="Fill" Width="812.251" Canvas.Top="86.606">
                <Path.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFF6E8B" />
                        <GradientStop Color="#FF04295D" Offset="0.692" />
                    </LinearGradientBrush>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="200,150" IsClosed="True">
                            <BezierSegment Point1="250,50" Point2="500,50" Point3="600,150" />
                            <BezierSegment Point1="700,200" Point2="650,300" Point3="500,350" />
                            <BezierSegment Point1="300,400" Point2="150,300" Point3="200,150" />
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- Texte erreur -->
            <TextBlock Name="incorect" Text="Incorrect !" 
                       FontSize="14" FontWeight="Bold" 
                       Visibility="Hidden"
                       Foreground="Red"
                       Canvas.Left="338" Canvas.Top="426" 
                       Width="75" MouseUp="Incorect_MouseUp" />

            <!-- Logo animé -->
            <Image x:Name="logoImage"
                   Height="258"
                   Width="328"
                   Canvas.Left="584"
                   Canvas.Top="87"
                   Source="logo.png" />
        </Canvas>

        <!-- Bouton de fermeture -->
        <Button Content="X" 
                Width="30" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,75,809.4,0"
                Background="#FF64B5F6" 
                Foreground="White" 
                BorderBrush="Transparent" 
                FontWeight="Bold"
                ToolTip="Fermer" 
                Click="CloseWindow_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse Fill="#FF64B5F6" />
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Contenu Principal -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="239,195,355.4,131.4">
            <!-- Nom de la boutique -->

            <!-- Titre -->
            <TextBlock Text="Connexion👤" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="79,0,81,20" Width="140" Height="30" />

            <!-- Champ d'utilisateur avec Border -->
            <Border CornerRadius="10" 
                    BorderBrush="#FF64B5F6" 
                    BorderThickness="1" 
                    Margin="0,0,0,10" 
                    Background="White">
                <TextBox FontSize="16" Name="UsernameTextBox"
                         Padding="10" 
                         Background="Transparent" 
                         VerticalContentAlignment="Center" 
                         ToolTip="Nom d'utilisateur" />
            </Border>

            <!-- Champ de mot de passe avec Border -->
            <Border CornerRadius="10" 
                    BorderBrush="#FF64B5F6" 
                    BorderThickness="1" 
                    Margin="0,0,0,20" 
                    Background="White">
                <PasswordBox FontSize="16" Name="PassworddBox"
                             Padding="10" 
                             Background="Transparent" 
                             VerticalContentAlignment="Center" 
                             ToolTip="Mot de passe" />
            </Border>

            <!-- Bouton de Connexion avec Border -->
            <Border CornerRadius="20" 
                    Background="#FF64B5F6" 
                    Margin="0,0,0,10">
                <Button Content="Se connecter"  Click="Connexion_Click"
                        FontSize="16" 
                        Padding="5" 
                        Foreground="White" 
                        BorderBrush="Transparent" 
                        HorizontalAlignment="Center" 
                        Width="254" 
                        Height="40" 
                        Background="Transparent" Margin="22,0,24,0" />
            </Border>
        </StackPanel>
    </Grid>
</Window>
