<Window x:Class="Camara_Service.HistoriqueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historique " 
        Width="728" Height="436" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="#FF1E272E"
        AllowsTransparency="True">
    <Grid MouseDown="Grid_MouseDown">
        <Border CornerRadius="10" Background="#FF2C3E50" Padding="10">
            <DockPanel>
                <!-- Header -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="✖" Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" Click="Close_Click"/>
                </StackPanel>

                <!-- Logs -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Historique" 
                               FontSize="18" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>

                        <ListBox x:Name="LogsList" Background="#FF34495E" Foreground="White" FontSize="14" BorderThickness="0" />
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
